SELECT AVG(salary) AS average_salary
FROM Instructor
WHERE dept_name = 'Music';



SELECT dept_name, AVG(salary) AS average_salary
FROM Instructor
GROUP BY dept_name;


SELECT dept_name, AVG(salary) AS average_salary
FROM Instructor
GROUP BY dept_name;


SELECT dept_name, AVG(salary) AS average_salary
FROM Instructor
GROUP BY dept_name
HAVING AVG(salary) > 40000;

